<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Document type</th>
      <th>Name</th>
      <th>Route</th>
      <th>State</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.document_type.name %></td>
        <td><%= document.name %></td>
        <td><%= document.route %></td>
        <td><%= document.state.name %></td>
        <td><%= document.company.name %></td>
        <td><%= link_to 'Show', document %></td>
        <%if signed_in? %>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

