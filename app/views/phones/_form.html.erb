      <%= link_to_remove_association 'Eliminar', f, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.label :type_phone %>
    <%= form.select :type_phone, Phone.type_phones.keys, {}, {} %>
  </div>

